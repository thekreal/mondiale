<div class="plan-title">
	<h1 class="large-12 large-offset-1 columns"><%= @trip_plan.title %></h1>
</div>

<div class="tab-row">
	<div class="large-12 large-offset-1 columns">
		<div >
			<%= link_to "Description", trip_plan_path(@trip_plan, tab: "Description"), class: "inspiration-tab", remote: true%>
			<%= link_to "Itinerary", trip_plan_path(@trip_plan, tab: "Itinerary"), class: "inspiration-tab", remote: true%>
			<%= link_to "Add a new destination", trip_plan_path(@trip_plan, tab: "Add"), class: "inspiration-tab", remote: true%>
		</div>
	</div>
</div>

<div class="tab-row plan-content">

	<div class="large-10 large-offset-1 columns">

		<div class="plan-description">
			<%= @trip_plan.description %>
		</div>

		<div class="plan-itinerary hidden-tab">
			<h1>Your Itinerary</h1>
			<%= render @plan_items %>
		</div>

		<div class="plan-add-new hidden-tab">
			<h1>Add a new item to your itinerary</h1>
		</div>

	</div>

</div>